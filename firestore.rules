
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow create, update: if isSignedIn() && request.auth.uid == userId;
      allow delete: if false;
    }

    match /chats/{chatId} {
      // Explicitly allow GET requests if the user is a member.
      // This is crucial for allowing other services like Firebase Storage
      // to check permissions by reading this document.
      allow get: if request.auth.uid in resource.data.members;

      // Explicitly allow LIST (query) requests ONLY if the query is
      // securely filtering for chats where the user is a member.
      allow list: if isSignedIn() && request.query.where[0][1] == 'array-contains' && request.query.where[0][2] == request.auth.uid;

      // Allow a user to create a chat if they are a member of the new chat.
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.members;

      // Allow a user to update a chat (e.g., lastMessage) if they are a member.
      allow update: if request.auth.uid in resource.data.members;

      // Disallow deleting chats.
      allow delete: if false;

      match /messages/{messageId} {
        // Allow reading messages if the user is a member of the parent chat.
        allow read: if request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.members;
        
        // Allow creating a message if the user is a member and the sender.
        allow create: if (request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.members) && request.resource.data.senderId == request.auth.uid;
        
        // Disallow updating or deleting messages.
        allow update, delete: if false;
      }
    }
  }
}
